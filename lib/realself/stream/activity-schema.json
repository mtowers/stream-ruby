{
  "id" : "http://realself.com/activity-schema#",
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "description" : "Activity schema for activity stream items",
  "type" : "object",
  "required" : ["published", "title", "actor", "verb", "object"],
  "properties" : {
    "published" : {
      "type" : "string",
      "format" : "date-time"
    },
    "title" : {
    	"type" : "string"
    },
    "actor" : {
        "$ref" : "#/definitions/activity-object"
    },
    "verb" : {
        "type" :"string"
    },
    "object" : {
        "$ref" : "#/definitions/activity-object"
    },
    "target" : {
        "$ref" : "#/definitions/activity-object"
    },
    "relatives" : {
        "type" : "array",
        "items" : {"$ref" : "#/definitions/activity-object"},
        "minItems" : 1,
        "uniqueItems" : true
    }        
  },
  "definitions" : {
    "activity-object" : {
      "type" : "object",
      "required" : ["type", "id"],
      "properties" : {
        "type" : {
          "type" : "string"
        },
        "id" : {
          "type" : "string"
        }
      }
    }
  }
}